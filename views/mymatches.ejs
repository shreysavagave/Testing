<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mymatches</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* For sidebar animation */
        .sidebar {
            transform: translateX(-100%);
            transition: transform 0.3s ease-in-out;
        }
        .sidebar-open {
            transform: translateX(0);
        }
        /* Hidden content */
        .hidden {
            display: none;
        }
    </style>
</head>
<body class="bg-zinc-900 text-white">
    <header class="m-0 p-0 bg-zinc-800">
        <div class="flex justify-between items-center p-2">
            <!-- Profile Button -->
            <div class="items-center">
                <button id="profile-btn" class="flex items-center text-zinc-400 hover:text-white focus:outline-none">
                    <img src="static/profile.png" class="w-8 h-8 mx-2 p-1 object-contain rounded-full" alt="Profile Icon">
                    <span>Profile</span>
                </button>
            </div>
            
            <!-- Logo -->
            <div class="flex">
                <img src="static/logo.png" class="rounded-lg h-12 mx-5 object-contain" alt="FanPick Logo">
            </div>

            <!-- Wallet Button -->
            <div class="flex items-center mx-3">
                <a href="wallet.html" class="flex items-center text-zinc-400 hover:text-white">
                    <img src="static/wallet.png" class="w-8 h-8 mr-2 p-1 object-contain" alt="Wallet Icon">
                    <span>100</span>
                </a>
            </div>
        </div>
    </header>

    <!-- Sidebar (Hidden initially) -->
    <div id="sidebar" class="sidebar fixed top-0 left-0 w-64 h-full bg-zinc-800 text-white shadow-lg p-6">
        <button id="close-btn" class="text-zinc-400 hover:text-white focus:outline-none float-right">
            &times;
        </button>
        <div class="mt-6">
            <!-- Username -->
            <h2 class="text-lg font-semibold">Username</h2>

            <!-- Previous Matches Link -->
            <a href="previous-matches.html" class="block mt-4 text-zinc-400 hover:text-white">Previous Matches</a>

            <!-- Other Links -->
            <a href="settings.html" class="block mt-2 text-zinc-400 hover:text-white">Settings</a>

            <!-- Logout Button -->
            <a href="logout.html" class="block mt-10 py-2 px-4 text-center bg-red-600 rounded hover:bg-red-500">
                Logout
            </a>
        </div>
    </div>

        <div id="my-matches" class="hidden">
            <a href="#">
                <div class="match flex justify-center">
                    <button class="border-2 border-zinc-800 bg-zinc-900 m-5 w-full md:w-96 rounded-md hover:bg-zinc-800">
                        <h1 id="series" class="mt-2 text-zinc-400">Your Match Name</h1>
                        <div class="teams flex justify-between p-3">
                            <div class="team1 flex items-center">
                                <img src="static/download.png" alt="Team 1 Logo" class="w-8 h-8 mr-2 object-contain rounded-full">
                                <h4>Team 1</h4>
                            </div>
                            <h4 class="text-red-500">vs</h4>
                            <div class="team2 flex items-center">
                                <h4>Team 2</h4>
                                <img src="static/download.png" alt="Team 2 Logo" class="w-8 h-8 ml-2 object-contain rounded-full">
                            </div>
                        </div>
                        <h5 class="text-blue-500 pb-2">${timeRemaining}</h5>
                    </button>
                </div>
            </a>
        </div>
    </main>

    <!-- Bottom Tabs for Upcoming and My Matches -->

    <div class="fixed bottom-0 w-full bg-zinc-800 flex justify-around py-2 h-max text-zinc-500">
      <!-- Upcoming Matches Button -->
      <a href="/" id="upcoming-btn" class="w-1/3">
          <button  class="">Upcoming Matches</button>
      </a>
  
      <!-- My Matches Button -->
      <a href="#" id="my-matches-btn" class="text-white w-1/3" >
          <button>My Matches</button>
      </a>

      <a href="/profile" id="my-matches-btn" class="" >
          <button>
              <img src="static/profile.png" class="w-8 h-8 mx-2 p-1 object-contain rounded-full " alt="Profile Icon">
          </button>
      </a>

   
  </div>
    

<script src="scriptUI.js"></script>
<!-- <script src="scriptnew.js"></script> -->
</body>
</html>